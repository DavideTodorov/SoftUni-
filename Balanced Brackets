package com.company;

import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        int iterationsCount = Integer.parseInt(scanner.nextLine());

        int openingBrackets = 0;
        int totalOpeningBrackets = 0;
        int closingBrackets = 0;
        int totalClosingBrackets = 0;
        boolean flag = true;
        for (int i = 0; i < iterationsCount; i++) {
            String input = scanner.nextLine();

            if (input.equals("(")) {
                openingBrackets++;
                totalOpeningBrackets++;
                closingBrackets = 0;

            } else if (input.equals(")")) {
                closingBrackets++;

                if (closingBrackets > openingBrackets){
                    System.out.println("UNBALANCED");
                    flag = false;
                    break;
                }

                totalClosingBrackets++;
                openingBrackets = 0;
            }

            if (openingBrackets == 2 || closingBrackets == 2) {
                System.out.println("UNBALANCED");
                flag = false;
                break;
            }
        }

        if (flag) {
            if (totalClosingBrackets == totalOpeningBrackets) {
                System.out.println("BALANCED");
            } else {
                System.out.println("UNBALANCED");
            }
        }
    }
}
